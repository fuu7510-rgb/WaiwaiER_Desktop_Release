{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noInferrableTypes": "off",
        "useBlockStatements": "off",
        "useConsistentArrayType": "off",
        "noInlineStyles": "off"
      },
      "nursery": {
        "noStaticElementInteractions": "off",
        "useAriaPropsSupportedByRole": "off",
        "useSortedClasses": "off",
        "noRestrictedImports": "off",
        "noInlineStyles": "off"
      },
      "a11y": {
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn"
      }
    },
    "ignore": ["**/node_modules/**", "**/dist/**", "**/references/**", "**/src-tauri/target/**"]
  },
  "css": {
    "linter": {
      "enabled": false
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "files": {
    "ignore": ["**/node_modules/**", "**/dist/**", "**/references/**", "**/src-tauri/target/**"]
  }
}
